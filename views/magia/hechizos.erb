<title>HeroSheet: Hechizos</title>

<%= erb :menu %><br>
<h1>Hechizos elementales de nivel <%= @spelllevel || 1 %></h1>

<table id='table-2'>
	<thead>
		<th>Icono</th>
		<th>Elemento</th>
		<th>Nombre</th>
		<th>Descripci√≥n</th>
		<% if @spelllevel == 1 %>
			<th>Diablura</th>
		<% end %>
		<th>Potencia</th>
	</thead>
	<tbody>
		<% spells.each do |s|%>
			<% if @spelllevel.to_i == s.nivel %>
				<% magic = spell(s.id) %>
				<tr style=<%= magic.color %>>				
					<td><% img_path = "'../../images/spells/#{magic.name}.png'" %>
						<img src=<%=img_path%> alt=<%=magic.name%>, id='icon' />
					</td>
					<td><%= magic.elemento.capitalize %></td>
					<td><%= magic.name.capitalize %></td>
					<td><%= magic.efecto %></td>
					<% if @spelllevel == 1 %>
						<td><%= magic.diablura %></td>
					<% end %>	
					<td><%= magic.potencia %></td>			
				</tr>
			<% end %>
		<% end %>
	</tbody>
</table><br>